<p id="notice"><%= notice %></p>

<h1>Amigas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Address</th>
      <th>Bday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amigas.each do |amiga| %>
      <tr>
        <td><%= amiga.name %></td>
        <td><%= amiga.age %></td>
        <td><%= amiga.address %></td>
        <td><%= amiga.bday %></td>
        <td><%= link_to 'Show', amiga %></td>
        <td><%= link_to 'Edit', edit_amiga_path(amiga) %></td>
        <td><%= link_to 'Destroy', amiga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

